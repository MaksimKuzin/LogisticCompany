@model IEnumerable<LogisticCompany.Models.Recepient>

@{
    ViewData["Title"] = "Получатели";
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FIO)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BirthYear)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PostalCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DeliveryAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>
                <a style="color:black" href="/Order/OrdersByRecipientId?recipientId=@item.Id">@Html.DisplayFor(modelItem => item.FIO)</a>
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.BirthYear)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.PostalCode)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.DeliveryAddress)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.Phone)
            </th>
            <th>
                <a href="/Recepient/Edit?id=@item.Id">&#9998;</a>
            </th>
            <th>
                <a href="/Recepient/Delete?id=@item.Id">&#128465;</a>
            </th>
        </tr>
    }
</table>
<a href="/Recepient/Create" class="btn btn-success">Добавить получателя</a>